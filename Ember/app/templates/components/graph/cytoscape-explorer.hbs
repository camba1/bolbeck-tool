<div class="container bg-white py-0 px-2" >
    <div class="row">
      <div class="col-2">
        <button class="btn btn-link p-0" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          {{fa-icon 'bars'}}
        </button>
      </div>
      <div class="col-8 d-flex justify-content-center">
        <button class="btn btn-link p-0" type="button" {{action "areaZoom"}}>
          {{fa-icon 'search-plus'}}
        </button>
      </div>
      <div class="col-1">
        {{#if nodesHidden}}
        <button class="btn btn-link p-0" type="button" {{action "showAllNodes"}}>
          {{fa-icon 'eye'}}
        </button>
        {{/if}}
      </div>
      <div class="col-1 d-flex justify-content-end">
        <button class="btn btn-link p-0" type="button" {{action "expandGraph"}}>
          {{fa-icon 'expand'}}
        </button>
      </div>
    </div>
  <div class="collapse" id="collapseExample">
    <div class="card card-body">
      <div class="input-group my-1">
        <div class="input-group-prepend">
          <label class="input-group-text" for="inputGroupSelect01">Layout</label>
        </div>
        <select class="custom-select" onchange={{action "setselectedLayout" value="target.value" }}>
          {{#each graphLayouts as |layoutOption| }}
            <option value={{layoutOption.value}}>{{layoutOption.label}}</option>
          {{/each}}
        </select>
        <div class="input-group-append">
          <button class="btn btn-outline-secondary" type="button" {{action "restyle"}}>Restyle</button>
        </div>
      </div>
      <div class="input-group mb-1">
        <div class="input-group-prepend">
          <label class="input-group-text" for="inputGroupSelect02">Groups</label>
        </div>
        <select class="custom-select" onchange={{action "setSelectedGroup" value="target.value" }}>
          {{#each graphGroupings as |groupOption| }}
            <option value={{groupOption.value}}>{{groupOption.label}}</option>
          {{/each}}
        </select>
      </div>
      <div>
        {{input id="restyleAfterExpandGraph" type="checkbox" checked=restyleAfterExpandGraph}}
        <label for="restyleAfterExpandGraph">Auto restyle after expand graph</label>
      </div>
    </div>
  </div>

  <div id="cy"></div>
</div>
{{yield}}
