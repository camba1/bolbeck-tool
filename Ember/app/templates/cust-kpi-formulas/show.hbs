<!-- {{cust-kpi-formula-listing custKpiFormula = model}} -->
<div class="container">
  {{#if model }}
    {{#with model.firstObject as |custKpiFormula|}}
      <div class="detail key">
      <span>Key:</span> {{custKpiFormula._key}}
      </div>
      <div class="detail custKpiFormulaName">
        <!-- <span>Name:</span> {{input type="text" value=custKpiFormula.name disabled=true}} -->
        <label class="control-label" for="custKpiFormulaName">Name: </label>
        {{input id="custKpiFormulaName" class="modelName" type="text" value=custKpiFormula.name}}
      </div>
      <div class="detail custKpiFormulaformula">
        <label class="control-label" for="custKpiFormulaformula">Formula: </label>
        {{input id="custKpiFormulaformula" class="modelFormula" type="text" value=custKpiFormula.formula}}
      </div>
      <div class="detail custKpiFormulatype">
        <label class="control-label" for="custKpiFormulatype">Type: </label>
        {{input id="custKpiFormulatype" class="modelType" type="text" value=custKpiFormula.type}}
      </div>
      <div class="detail custKpiFormulavalidityDate">
        <label class="control-label" for="custKpiFormulavalidityDate">Validity Date: </label>
        {{input id="custKpiFormulavalidityDate" class="modelValidityDate" type="date" value=custKpiFormula.validityDate}}
      </div>
      <div class="detail custKpiFormulacalculationOrder">
        <!-- <span>Calculation Order:</span> {{custKpiFormula.calculationOrder}} -->
        <label class="control-label" for="custKpiFormulacalculationOrder">Calculation Order: </label>
        {{input id="custKpiFormulacalculationOrder" class="modelCalculationOrder" type="number" value=custKpiFormula.calculationOrder}}
      </div>
    {{/with}}
    <button class="btn btn-primary btn-sm updateDataBtn py-0" {{action "updateData"}}> {{fa-icon 'save'}} <div class='small'>update </div></button>
    <button class="btn btn-secondary btn-sm deleteDataBtn py-0" {{action "deleteData"}}> {{fa-icon 'archive'}} <div class='small'>delete </div></button>
  {{else}}
    <div class="detail noData">
      No data found. Record may have been deleted by another user
    </div>
    <br>
  {{/if}}
  {{#link-to "cust-kpi-formulas" class="btn btn-primary btn-sm backBtn py-0"}} {{fa-icon 'arrow-alt-circle-left'}} <div class='small'>Back </div> {{/link-to}}
</div>
