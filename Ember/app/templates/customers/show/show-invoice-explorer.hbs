<br/>
<div class="container bg-light">
  <br/>
  <div class="row">
    <div class="col-md-8">
      {{graph/cytoscape-explorer
          nodes = nodes
          edges = edges
          graphStyle = graphStyle
          graphLayout = graphLayout
          onNodeClicked=(action "graphNodeClicked")
      }}
    </div>
    <div class="col-md">
      <div class="card">
        <div class="card-header">
          Invoice
        </div>
        <div class="card-body">
          Test
        </div>
      </div>
      <div class="card">
        <div class="card-header">
          Products
        </div>
        <div class="card-body">
          Test 2
        </div>
      </div>
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="col-md">
      <table class="table table-hover table-bordered table-sm bg-white listing">
        <thead>
          <tr>
            <th>Customer</th>
            <th>key</th>
            <th>Invoice Date</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tbody class='mybody'>
          {{#each model as |invoiceRow| }}
            <tr class="myrow">
              <td>
                {{#link-to "invoices.show.show-detail" invoiceRow._key class="customerName"}}
                  {{invoiceRow.customerName}}
                {{/link-to}}
              </td>
              <td class="key">{{invoiceRow._key}}</td>
              <td class="formula">{{invoiceRow.invoiceDate}}</td>
              <td class="type">{{invoiceRow.totAmount}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
{{outlet}}
